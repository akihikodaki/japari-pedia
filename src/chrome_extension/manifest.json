{
  "name": "ジャパリペディア",
  "description": "Wikipedia を ジャパリ図書館化 するよ。",
  "manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/*",
        "https://*.wiktionary.org/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
